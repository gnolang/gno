# Set up GNOROOT in the current directory.
mkdir $WORK/gnovm/tests
symlink $WORK/gnovm/stdlibs -> $GNOROOT/gnovm/stdlibs
symlink $WORK/gnovm/tests/stdlibs -> $GNOROOT/gnovm/tests/stdlibs
env GNOROOT=$WORK

gno test -v ./r/realm2

stderr '=== RUN   TestDo'
stderr '--- PASS: TestDo.*'

stderr '=== RUN   ./r/realm2/realm2_filetest.gno'
stderr '--- PASS: ./r/realm2/realm2_filetest.*'

-- gnowork.toml --
-- p/counter/gnomod.toml --
module = "gno.land/p/demo/counter"

-- p/counter/counter.gno --
package counter

type Counter struct {
	n int
}

func (c *Counter) Inc() {
	c.n++
}

-- r/realm1/gnomod.toml --
module = "gno.land/r/demo/realm1"
gno = "0.9"

-- r/realm1/realm1.gno --
package realm1

import "gno.land/p/demo/counter"

var c = counter.Counter{}

func GetCounter() *counter.Counter {
	return &c
}

-- r/realm2/gnomod.toml --
module = "gno.land/r/demo/realm2"
gno = "0.9"

-- r/realm2/realm2.gno --
package realm2

import (
	"gno.land/r/demo/realm1"
)

func Do() {
	realm1.GetCounter().Inc()
}

-- r/realm2/realm2_filetest.gno --
// PKGPATH: gno.land/r/tests
package tests

import "gno.land/r/demo/realm2"

func main(cur realm) {
	realm2.Do()
	println("OK")
}

