// Render comment/reply view.
package main

import (
	"std"
	"testing"

	boards2 "gno.land/r/gnoland/boards2/v1"
)

const (
	owner     = std.Address("g16jpf0puufcpcjkph5nxueec8etpcldz7zwgydq") // @devx
	boardName = "BoardName"
)

var (
	threadID boards2.PostID
	replyID  boards2.PostID
)

func init() {
	testing.SetRealm(std.NewUserRealm(owner))

	// Create a board and a thread
	boardID := cross(boards2.CreateBoard)(boardName, false)
	threadID = cross(boards2.CreateThread)(boardID, "Foo", "Body")

	// Create two comments and a reply to a comment
	cross(boards2.CreateReply)(boardID, threadID, 0, "First comment")

	replyID = cross(boards2.CreateReply)(boardID, threadID, 0, "Second comment")
	cross(boards2.CreateReply)(boardID, threadID, replyID, "Third comment")
}

func main() {
	path := boardName + "/" + threadID.String() + "/" + replyID.String()
	println(boards2.Render(path))
}

