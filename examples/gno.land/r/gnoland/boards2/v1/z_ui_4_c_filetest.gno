// Render both original thread and thread repost view.
package main

import (
	"std"
	"testing"

	boards2 "gno.land/r/gnoland/boards2/v1"
)

const (
	owner        = std.Address("g16jpf0puufcpcjkph5nxueec8etpcldz7zwgydq") // @devx
	srcBoardName = "BoardName"
	dstBoardName = "BoardName2"
)

var (
	threadID       boards2.PostID
	repostThreadID boards2.PostID
)

func init() {
	testing.SetRealm(std.NewUserRealm(owner))

	// Create a board and a thread
	boardID := cross(boards2.CreateBoard)(srcBoardName, false)
	threadID = cross(boards2.CreateThread)(boardID, "Foo", "Body")

	// Repost thread into a different board
	dstBoardID := cross(boards2.CreateBoard)(dstBoardName, false)
	repostThreadID = cross(boards2.CreateRepost)(boardID, threadID, "Bar", "Body2", dstBoardID)
}

func main() {
	path := srcBoardName + "/" + threadID.String()
	println(boards2.Render(path))

	println(">>><<<\n")

	path = dstBoardName + "/" + repostThreadID.String()
	println(boards2.Render(path))
}

