		depositId := DepositGns("gno.land/r/onbloc/foo:127:30", uint64(1_000_000))
		uassert.Equal(t, depositId, `gno.land/r/onbloc/foo:127:30:g1d3sh2mnrdpcxzezyv4cx7umfwscryh6llz2xdm:141`)
