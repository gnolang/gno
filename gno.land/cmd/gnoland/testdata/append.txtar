-- append.gno --
package append

import (
	"gno.land/p/demo/ufmt"
)

type T struct{ i int }

var a []T

func init() {
	a = make([]T, 0, 1)
}

func Pop() {
	a = append(a[:0], a[1:]...)
}

func Append(i int) {
	a = append(a, T{i: i})
}

func Render(path string) string {
	var s string
	for i:=0;i<len(a);i++{
		s+=ufmt.Sprintf("%d-", a[i].i)
	}
	return s
}
