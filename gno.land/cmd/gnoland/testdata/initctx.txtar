package bar

import "std"

var orig = std.Address("orig")
var prev = std.Address("prev")

func init() {
    orig = std.GetOrigCaller()
    prev = std.PrevRealm().Addr()
}

func Render(addr string) string {
 	return " orig="+orig.String()+" prev="+prev.String()
}
