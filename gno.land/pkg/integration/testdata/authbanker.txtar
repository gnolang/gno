-- send_to_bob_cashier.gno --
package main

import (
    "std"

    "gno.land/r/demo/subacc"
    "gno.land/r/demo/authbanker"
)

func main() {
    // bob's cashier account
    destinationID := subacc.EntityID(std.Address("g1gvcsfj492u6cpxudrprzz23ulmppxgv9pqmnpj"), "cashier")

    authbanker.SendCoins(subacc.AuthToken("savings"), destinationID, 14)
}


