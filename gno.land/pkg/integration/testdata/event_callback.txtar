-- cbee.gno --
package cbee

import "chain"

const (
	foo = "foo"
	bar = "bar"
)

type contractA struct{}

func (c *contractA) foo(cb func()) {
	subFoo()
	cb()
}

func subFoo() {
	chain.Emit(foo, "k1", "v1", "k2", "v2")
}

type contractB struct{}

func (c *contractB) subBar() {
	chain.Emit(bar, "bar", "baz")
}

func Foo(cur realm) {
	a := &contractA{}
	b := &contractB{}

	a.foo(func() {
		b.subBar()
	})
}
