gnoland start

# add contract
# Note: addpkg does not add *_test.gno files, so it works as expected without
# causing any redeclaration issues.
gnokey maketx addpkg -pkgdir $WORK/foo -pkgpath gno.land/r/demo/foo -gas-fee 1000000ugnot -gas-wanted 16000000 -broadcast -chainid=tendermint_test test1
stdout OK!

-- foo/foo.gno --
package foo

func Add(a, b int) int {
	return add2(a, b)
}

func add2(a, b int) int {
	return a + b
}


-- foo/foo_test.gno --
package foo

import (
	"testing"
)

func TestFoo(t *testing.T) {
	a := 1
	b := 2

	if Add(a, b) != 3 {
		t.Errorf("Add(%d, %d) = %d, want %d", a, b, Add(a, b), a+b)
	}
}

func add2(a, b int) int {
	return a + b
}
