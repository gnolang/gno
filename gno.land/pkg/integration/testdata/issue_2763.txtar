module = "gno.land/r/demo/foo"
gno = "0.9"

-- foo/foo.gno --
package foo

func Add(a, b int) int {
	return add2(a, b)
}

func add2(a, b int) int {
	return a + b
}


-- foo/foo_test.gno --
package foo

import (
	"testing"
)

func TestFoo(t *testing.T) {
	a := 1
	b := 2

	if Add(a, b) != 3 {
		t.Errorf("Add(%d, %d) = %d, want %d", a, b, Add(a, b), a+b)
	}
}

func add2(a, b int) int {
	return a + b
}
