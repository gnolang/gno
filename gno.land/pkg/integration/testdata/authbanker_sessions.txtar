package main

import (
    "std"

    "gno.land/r/demo/sessions"
    "gno.land/r/demo/authbanker"
)

func main() {
    aliceAddr := std.Address("g1xd348e34sg4ndt3shpepv85dq8zw8dlufp9t6e")
    autok := sessions.AuthToken(aliceAddr)

    bobsAddr := "g1gvcsfj492u6cpxudrprzz23ulmppxgv9pqmnpj"

    amount := int64(14)

    authbanker.SendCoins(autok, bobsAddr, amount)
}