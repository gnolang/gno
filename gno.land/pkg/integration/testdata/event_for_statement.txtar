package foree

import "chain"

func Foo(cur realm) {
	for i := 0; i < 10; i++ {
		chain.Emit("testing", "foo", "bar")
	}
}

const (
	eventFoo = "Foo"
	eventBar = "Bar"
)

type contractA struct{}

func (c *contractA) Foo(cur realm, cb func()) {
	subFoo()
	cb()
}

func subFoo() {
	chain.Emit(eventFoo, "k1", "v1", "k2", "v2")
}

type contractB struct{}

func (c *contractB) subBar() {
	chain.Emit(eventBar, "bar", "baz")
}

func Bar(cur realm) {
	a := &contractA{}
	b := &contractB{}
	for i := 0; i < 2; i++ {
		a.Foo(cross, func() {
			b.subBar()
		})
	}
}
