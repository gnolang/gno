package foree

import "std"

func Foo() {
	crossing()

	for i := 0; i < 10; i++ {
		std.Emit("testing", "foo", "bar")
	}
}

const (
	eventFoo = "Foo"
	eventBar = "Bar"
)

type contractA struct{}

func (c *contractA) Foo(cb func()) {
	crossing()

	subFoo()
	cb()
}

func subFoo() {
	std.Emit(eventFoo, "k1", "v1", "k2", "v2")
}

type contractB struct{}

func (c *contractB) subBar() {
	std.Emit(eventBar, "bar", "baz")
}

func Bar() {
	crossing()

	a := &contractA{}
	b := &contractB{}
	for i := 0; i < 2; i++ {
		cross(a.Foo)(func() {
			b.subBar()
		})
	}
}
