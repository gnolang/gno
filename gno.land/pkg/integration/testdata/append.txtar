-- append.gno --
package append

import (
	"gno.land/p/nt/ufmt"
)

type T struct{ i int }

var a, b, d []T
var c = []T{{i: 100}}


func init() {
	a = make([]T, 0, 1)
}

func Pop(cur realm) {
	a = append(a[:0], a[1:]...)
}

func Append(cur realm, i int) {
	a = append(a, T{i: i})
}

func CopyAppend(cur realm) {
	b = append(a, T{i: 50}, T{i: 60})
}

func PopB(cur realm) {
	b = append(b[:0], b[1:]...)
}

func AppendMoreAndC(cur realm) {
	// Fill to capacity
	a = append(a, T{i: 70})
	// Above capacity; make new array
	a = append(a, c...)
}

func ReassignC(cur realm) {
	c[0] = T{i: 200}
}

func AppendNil(cur realm) {
	d = append(d, a...)
}

func Render(path string) string {
	source := a
	if path == "d" {
		source = d
	}

	var s string
	for i:=0;i<len(source);i++{
		s+=ufmt.Sprintf("%d-", source[i].i)
	}
	return s
}
