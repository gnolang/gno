module = "gno.land/r/bytesbank"
gno = "0.9"

-- bytesbank/bytesbank.gno --
package bytesbank

import "chain/runtime"

type unspent struct {
	dst  address
	load []byte
}

var unspents []*unspent

func Credit(cur realm, dst address, size int) int {
	unspents = append(unspents, &unspent{
		dst:  dst,
		load: make([]byte, size), // lock storage deposit
	})
	return len(unspents) - 1
}

func Debit(cur realm, idx int) {
	if len(unspents) <= idx {
		panic("no such index")
	}

	u := unspents[idx]
	if u == nil {
		panic("already spent")
	}

	if runtime.PreviousRealm().Address() != u.dst {
		panic("not for you")
	}

	unspents[idx] = nil // reclaim storage deposit
}
