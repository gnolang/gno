import "chain/runtime"

func Transfer(cur realm, to address, amount uint64) string {
	println("transfer from=" + runtime.PreviousRealm().Address().String() + " to=" + to.String() + " some-amount")
	return runtime.PreviousRealm().Address().String()
}
