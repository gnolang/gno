-- short/gnomod.toml --
module = "gno.land/r/test/realm_banker"
gno = "0.9"

-- short/realm_banker.gno --
package realm_banker

import (
	"chain/banker"
	"chain/runtime"
)

func Mint(cur realm, addr address, denom string, amount int64) {
	banker_ := banker.NewBanker(banker.BankerTypeRealmIssue)
	banker_.IssueCoin(addr, runtime.CurrentRealm().CoinDenom(denom), amount)
}

func Burn(cur realm, addr address, denom string, amount int64) {
	banker_ := banker.NewBanker(banker.BankerTypeRealmIssue)
	banker_.RemoveCoin(addr, runtime.CurrentRealm().CoinDenom(denom), amount)
}
