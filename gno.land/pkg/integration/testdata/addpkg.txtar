-- hello.gno --
package hello

import(
  "std"
)

func SayHello(cur realm) string {
 	return "hello world!"
}

func SayHello1(cur realm, s string) string {
 	return "hello " + s + "!"
}
func SayHello2(cur realm, s1, s2 string) string {
 	return s1 + " " +s2 + "!"
}

func PreviousRealm(cur realm) string{
  return std.PreviousRealm().String()
}
